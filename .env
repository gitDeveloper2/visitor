# Redis Configuration
REDIS_URL=redis://localhost:6379

# Voting System Configuration
CRON_SECRET=your-cron-secret-here
AUTH_SECRET=your-auth-secret-here

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/basicutils

# Deployment Flags - Control what features are visible to clients
# Blog is ready and visible to clients
BLOG_DEPLOYMENT_COMPLETE=true
BLOG_CONTENT_ENABLED=true

# Launch features - enabled
APP_LAUNCH_ENABLED=true
VOTING_SYSTEM_ENABLED=true
LAUNCH_PAGE_ENABLED=true

# Admin features (keep enabled for your work)
PREMIUM_FEATURES_ENABLED=true
ADMIN_PANEL_ENABLED=true

# Maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_BANNER=

# Vote Configuration (optional)
VOTE_WEIGHT_MULTIPLIER=1
PREMIUM_VOTE_BONUS=2

# Cloudinary Configuration (required for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name-here
CLOUDINARY_API_KEY=your-api-key-here
CLOUDINARY_API_SECRET=your-api-secret-here
